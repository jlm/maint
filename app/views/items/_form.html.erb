<%= simple_form_for(@item, remote: request.xhr?, html: {data: {modal: true}}) do |f| %>
  <div class="modal-body">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <%= f.input :number unless request.path_parameters[:action] == "edit" %>
    <%= f.input :date %>
    <%= f.input :standard %>
    <%= f.input :clause %>
    <%= f.input :subject %>
    <%= f.input :draft, label: "Draft with fix" %>
  </div>

  <div class="modal-footer">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
