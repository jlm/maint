<% provide(:title, "Items") %>
<ol class="breadcrumb">
  <li class="active"><%= @qualifier + " " + ENV["COMMITTEE"] + " Maintenance Items" %></li>
</ol>
<h1><%= @qualifier + " " + ENV["COMMITTEE"] + " Maintenance Items" %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= sortable "number" %></th>
      <th>Status</th>
      <th><%= sortable "date", "Submitted" %></th>
      <th><%= sortable "standard" %></th>
      <th><%= sortable "clause" %></th>
      <th>Subject</th>
      <th><%= sortable "draft", "Draft with fix" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <%= render item %>
    <% end %>
  </tbody>
</table>
<%= will_paginate @items, renderer: BootstrapPagination::Rails %>

<br>

<%= link_to 'New Item', new_item_path, class: "btn btn-default", data: { modal: true } if can? :create, Item %>
