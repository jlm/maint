<% provide(:title, make_meeting_name(@meeting)) %>
<p id="notice"><%= notice %></p>
<h1><%= make_meeting_name(@meeting) %> Meeting motions</h1>

<p id="notice"><%= notice %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Meeting</th>
      <th>Project</th>
      <th>Number</th>
      <th>Motion text</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @motions.each do |motion| %>
      <%= render motion %>
    <% end %>
  </tbody>
</table>
<%= will_paginate @motions, renderer: BootstrapPagination::Rails %>

<br>

<% if can? :create, Motion %>
  <%= link_to 'New Motion', new_meeting_motion_path(@meeting), class: "btn btn-warning", data: { modal: true } %>
<% end %>
