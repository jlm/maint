<tr>
  <td><%= motion.meeting.date %></td>
  <td><%= motion.project&.designation %></td>
  <td><%= motion.number %></td>
  <td><%= Rinku.auto_link(motion.motion_text).html_safe %></td>
  <% if can? :update, motion %>
    <td><%= link_to 'Edit', edit_meeting_motion_path(@meeting, motion), class: "btn btn-warning", data: { modal: true } %></td>
  <% end %>
  <% if can? :destroy, motion %>
    <td><%= link_to 'Destroy', meeting_motion_path(@meeting, motion), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</tr>
