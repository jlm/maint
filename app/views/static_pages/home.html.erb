<% provide(:title, "Home") %>
<div class="center jumbotron">
  <h1><%= ENV["COMMITTEE"] %> Tools</h1>

  <h2>Welcome to the <%= ENV["COMMITTEE"] %> tools portal.</h2>

  <p>Use the links in the bar above to navigate around the site.</p>

  <h2>Active Ballots</h2>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Project</th>
      <th>Short title</th>
      <th>Ballot</th>
      <th>Ballot close date</th>
    </tr>
    </thead>

    <tbody>
    <% @blt.each do |ballot| %>
      <tr>
        <td><%= link_to(ballot[:project].designation, project_path(ballot[:project])) %></td>
        <td><%= link_to_unless(ballot[:project].page_url.nil?, ballot[:project].short_title, ballot[:project].page_url) %></td>
        <td><%= link_to_unless(ballot[:event].url.nil?, ballot[:event].name, ballot[:event].url) %></td>
        <td><%= ballot[:event].end_date %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>

